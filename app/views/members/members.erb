<p id="notice"><%= notice %></p>

<h1>Listing Members</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>email</th>
      <th>name</th>
      <th>birthday</th>
      <th>date_in</th>
      <th>graduated_from</th>
      <th>role</th>
      <th>status</th>
      <th>right</th>
      <th>del_flg</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.email %></td>
        <td><%= member.name %></td>
        <td><%= member.birthday.strftime("%Y/%m/%d") if member.birthday.present? %></td>
        <td><%= member.date_in.strftime("%Y/%m/%d") if member.date_in.present? %></td>
        <td><%= member.graduated_from %></td>
        <td><%= member.role %></td>
        <td><%= member.status %></td>
        <td><%= member.m_right %></td>
        <td><%= member.del_flg %></td>

        <td>
          <div class="btn-group" role="group" aria-label="...">
            <nobr>
              <%= link_to 'Show', member, class: "btn btn-default" %>
              <%= link_to 'Edit', edit_member_path(member) , class: "btn btn-default" %>
              <%= link_to 'Destroy', member, class: "btn btn-default", method: :delete, data: { confirm: 'Are you sure?' } %>
            </nobr>
          </div>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

