<%= form_for(@member) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  

  <div class="panel panel-default">
  <div class="panel-heading"><h3>Editing Member</h3></div>
  <div class="panel-body">
    
    <div class="field">
      <%= f.label :email %><br>
      <%= f.email_field :email, autofocus: true, class: "text_style" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "text_style" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "text_style" %>
    </div>


    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "text_style" %>
    </div>

    <div class="field">
      <%= f.label :birthday %><br>
      <%= f.text_field :birthday, class: "datepicker", class: "text_style" %>
    </div>

    <div class="field">
      <%= f.label :date_in %><br>
      <%= f.text_field :date_in, class: "text_style" %>
    </div>

    <div class="field">
      <%= f.label :graduated_from %><br>
      <%= f.text_field :graduated_from, class: "text_style" %>
    </div>

    <div class="field">
      <%= f.label :role %><br>
      <%= f.select :role, MRole.all.collect{ |mr| [mr.role, mr.role_no] }, { include_blank: true }, { class: "text_style" } %>
      <%#= f.text_field :role %>
    </div>

    <div class="field">
      <%= f.label :status %><br>
      <%= f.text_field :status, class: "text_style" %>
    </div>

    <div class="field">
      <%= f.label :del_flg %><br>
      <%= f.text_field :del_flg, class: "text_style" %>
    </div>

    <div class="field">
      <%= image_tag(@member.avatar_url, style: "width: 150px; height: 150px") if @member.avatar? %>
      <%= f.file_field :avatar %>
      <%= f.hidden_field :avatar_cache, class: "text_style" %>
    </div>

    <br />

    <div class="actions">
      <%= f.submit class: "btn btn-primary" %>
      &nbsp;
      <%= link_to 'Back', show_all_members_path, class: "btn btn-default" %>
    </div>

    <%#= link_to 'Show', @member %>
    

  </div>
  </div>
<% end %>
