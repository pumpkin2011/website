  <% end %>

  <div class="panel panel-default">
  <div class="panel-heading"><h3>Editing Mainmenu</h3></div>
  <div class="panel-body">

    <div class="field">
      <%= f.label :content %><br>
      <%= f.kindeditor :content, :simple_mode => true, :owner_id => :id  %>
    </div>

    <br>
    <br>

    <div class="field">
      Avatar
      <br>
      <%= image_tag(@mainmenu.avatar_url, style: "width: 150px; height: 150px") if @mainmenu.avatar? %>
      <br>
      <%= f.file_field :avatar %>
      <%= f.hidden_field :avatar_cache %>
    </div>

  <!--
    <div class="field">
      <%#= f.label :dis_flg %><br>
      <%#= f.text_field :dis_flg, class: "datepicker" %>
    </div>
  -->
    <br>
    <br>
    
    <div class="actions">
      <%= f.submit class: "btn btn-primary" %>
      &nbsp;&nbsp;
      <%= link_to 'Back', mainmenus_path, class: "btn btn-default" %>
    </div>

  </div>
  </div>

<% end %>
