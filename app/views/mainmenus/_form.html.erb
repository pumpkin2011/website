<%= form_for(@mainmenu) do |f| %>
  <% if @mainmenu.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@mainmenu.errors.count, "error") %> prohibited this mainmenu from being saved:</h2>

      <ul>
      <% @mainmenu.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :content %><br>
    <%= f.kindeditor :content, :simple_mode => true, :owner_id => :id  %>
  </div>

  <div class="field">
    Avatar
    <br>
    <%= image_tag(@mainmenu.avatar_url, style: "width: 150px; height: 150px") if @mainmenu.avatar? %>
    <br>
    <%= f.file_field :avatar %>
    <%= f.hidden_field :avatar_cache %>
  </div>

  <div class="field">
    <%= f.label :dis_flg %><br>
    <%= f.text_field :dis_flg, class: "datepicker" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
